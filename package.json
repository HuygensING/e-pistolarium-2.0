    "@types/react-router-dom": "^4.0.5",
    "awesome-typescript-loader": "^3.2.1",
    "body-parser": "^1.17.2",
    "browser-sync": "^2.18.12",
    "connect-modrewrite": "^0.10.1",
    "express": "^4.15.3",
    "jest": "^20.0.4",
    "lodash.debounce": "^4.0.8",
    "nodemon": "^1.11.0",
    "proxy-middleware": "^0.15.0",
    "stylus": "^0.54.5",
    "ts-jest": "^20.0.6",
    "typescript": "2.4.1",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
