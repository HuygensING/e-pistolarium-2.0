    "server-client": "node server.js",
    "server": "nodemon build/server",
    "test": "jest",
    "watch-client": "webpack -w",
    "watch-server": "tsc -w -p src/server",
    "watch-stylus": "stylus --watch --out build/client/index.css src/client/stylus/index.styl"
  },
