activeAnnotationType()
	cursor pointer
	padding 0 2px

	&:after
		background-size 16px 16px
		content ''
		display inline-block
		height 16px
		margin-left 4px
		width 16px

.record
	height 100%
	overflow-x hidden
	white-space nowrap
	width 100%

	aside, & > .letter
		inline-block()
		white-space normal

	& > .letter
		font-size 1.4em
		height calc(100% - 40px)
		line-height 1.8em
		padding 20px 1em
		max-width 640px
		overflow-y auto
		width calc(100% - 360px)

		.text
			p
				margin 0 0 1em 0

			span.highlight
				background-color rgba(yellow, 0.3)
				border-top 1px solid rgba(#CCC, 1)
				border-bottom 1px solid rgba(#CCC, 1)
				color black

	&.persons
		persName
			activeAnnotationType()
			border-bottom 1px solid ep_purple

			&:after
				background-image url('/static/images/android-person.svg')
	&.places
		placeName
			activeAnnotationType()
			border-bottom 1px solid ep_pink

			&:after
				background-image url('/static/images/android-globe.svg')

	&.dates
		date
			activeAnnotationType()
			border-bottom 1px solid ep_green

			&:after
				background-image url('/static/images/android-calendar.svg')

