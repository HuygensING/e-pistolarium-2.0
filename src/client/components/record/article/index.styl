activeAnnotationType()
	cursor pointer
	padding 0 2px

	&:after
		background-size 16px 16px
		content ''
		display inline-block
		height 16px
		margin-left 4px
		width 16px

.record
	&.persons
		article .persname
			activeAnnotationType()
			border-bottom 1px solid ep_purple

			&:after
				background-image url('/static/images/android-person.svg')

	&.places
		article .placename
			activeAnnotationType()
			border-bottom 1px solid ep_pink

			&:after
				background-image url('/static/images/android-globe.svg')

	&.dates
		article .date
			activeAnnotationType()
			border-bottom 1px solid ep_green

			&:after
				background-image url('/static/images/android-calendar.svg')

	article
		font-size 1.4em
		height calc(100% - 40px)
		line-height 1.8em
		padding 20px 1em
		max-width 640px
		overflow-y auto
		width calc(100% - 360px)

		.p
			margin 0 0 1em 0

			*
				display inline

		span.highlight, span.user-annotation-text
			background-color rgba(yellow, 0.3)
			border-top 1px solid rgba(#CCC, 1)
			border-bottom 1px solid rgba(#CCC, 1)
			color black

